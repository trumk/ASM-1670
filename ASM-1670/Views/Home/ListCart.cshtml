
@{
    ViewData["Title"] = "ListCart";
}

<style>
    td, th {
        padding: 10px;
    }
</style>
<script src="~/js/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.updateCart').click(function (e) {
            e.preventDefault();

            var productId = $(this).data('id');
            var quantity = $('.quantity_' + productId).val();

            console.log('Updating quantity for product ID:', productId, 'to quantity:', quantity);

            // Make an AJAX request to update the quantity
            $.ajax({
                type: 'POST',
                url: '/Cart/UpdateCart', // Update the URL to match your controller action
                data: { id: productId, quantity: quantity },
                success: function (data) {
                    console.log('Quantity updated successfully:', data);
                    // Optionally, update the total or any other UI elements
                },
                error: function () {
                    alert('Error updating quantity');
                }
            });
        });

        $('.deleteCart').click(function (e) {
            e.preventDefault();

            var productId = $(this).data('id');

            // Make an AJAX request to delete the item
            $.ajax({
                type: 'POST',
                url: '/Cart/DeleteItem', // Change the URL to match your controller action
                data: { productId: productId },
                success: function () {
                    // Optionally, remove the row or update the UI
                },
                error: function () {
                    alert('Error deleting item');
                }
            });
        });
    });
</script>


@if (ViewBag.carts != null && ViewBag.carts.Count > 0)
{
    <div class="List-cart">
        <table>
            <tr>
                <th>No</th>
                <th>Image</th>
                <th>Title</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Total</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
            @{
                int counter = 0;
                foreach (var item in ViewBag.carts)
                {
                    string txt_class = "quantity_" + item.Product.Id;
                    decimal total = item.Product.Price * item.Quantity;
                    counter++;
                    <tr>
                        <td>@counter</td>
                        <td><img src="~/images/@item.Product.Picture" width="120" height="200" /></td>
                        <td>@item.Product.Title</td>
                        <td><input type="number" class="@txt_class" value="@item.Quantity" /></td>
                        <td>$@item.Product.Price</td>
                        <td>$@total</td>
                        <td><a href="" data-id="@item.Product.Id" class="updateCart">Update</a></td>
                        <td><a asp-controller="Home" asp-action="deleteCart" asp-route-id="@item.Product.Id">Delete</a></td>
                    </tr>
                }
            }
        </table>
    </div>
}
else
{
    <div>
        <p>No items found in your cart.</p>
    </div>
}

