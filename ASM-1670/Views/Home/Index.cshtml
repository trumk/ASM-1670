@{
    ViewData["Title"] = "Home Page";
}

<style>
    .List-book {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-around;
        margin: -10px; /* Negative margin to create space between items */
    }

    .product-card {
        flex: 0 0 calc(30% - 20px); /* Adjust the width to fit three items per row */
        border: 1px solid #ccc;
        border-radius: 8px;
        padding: 16px;
        margin: 10px; /* Adjust the margin to create space between items */
        text-align: center;
    }

    .product-card img {
        max-width: 100%;
        height: auto;
        border-radius: 4px;
    }

    .product-card .title {
        display: block;
        margin-top: 8px;
        font-weight: bold;
        text-decoration: none; 
    }

    .product-card .title a {
        color: inherit; 
    }

    .product-card .addBook {
        display: inline-block;
        margin-top: 8px;
        padding: 8px 16px;
        background-color: midnightblue;          
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }
</style>

<div class="List-book">
    @foreach (var item in ViewBag.Book)
    {
        <div class="product-card">
            <a asp-action="Detail" asp-route-id="@item.Id"><img src="/images/@item.Picture" class="img-responsive" width="200" height="200" /></a>
            <span class="title"><a asp-action="Detail" asp-route-id="@item.Id">@item.Title</a></span>
            <span class="title">@item.Author</span>
            <a asp-controller="Home" asp-action="AddCart" asp-route-id="@item.Id" class="addBook">Add to Cart</a>
        </div>
    }
</div>
